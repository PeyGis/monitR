<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_service_providers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.capstone.icoffie.monitr.ServiceProvidersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/nav_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:id="@+id/textAccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sync Your Online Account Now"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/textAccountTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="it's free"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>


        <Button
        android:background="@color/colorPrimaryDark"
        android:id="@+id/actGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="easy-Pay"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="@dimen/activity_horizontal_margin"
        />
        <Button
        android:background="@color/colorJumia"
        android:id="@+id/actJumia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shoppn Online"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
        android:padding="@dimen/activity_horizontal_margin"
        />
        <Button
            android:background="@color/colorAccent"
            android:id="@+id/actFidelity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bankex Mobile Banking"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="@dimen/activity_horizontal_margin"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1 of 2"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
    </LinearLayout>

</ScrollView>
